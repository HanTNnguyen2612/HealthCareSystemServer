@page
@model HealthCareSystemClient.Pages.Auth.loginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - HealthCareSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="styles.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6 col-lg-5">
                <div class="text-center mb-4">
                    <a href="index.html" class="navbar-brand text-decoration-none">
                        <i class="fas fa-heartbeat me-2"></i>HealthCareSystem
                    </a>
                </div>
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold mb-2">Welcome back</h2>
                            <p class="text-secondary">Sign in to access your health dashboard</p>
                        </div>
                        <form id="loginForm">
                            <div class="mb-4">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control form-control-lg" id="email" required>
                            </div>
                            <div class="mb-4">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control form-control-lg" id="password" required>
                            </div>
                            <div class="mb-4 form-check">
                                <input type="checkbox" class="form-check-input" id="remember">
                                <label class="form-check-label text-secondary" for="remember">Remember me</label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Sign In</button>

                            <!-- Nút Login với Google -->
                            <div id="googleLoginDiv" class="mb-4 text-center "></div>
                        </form>
                        <div class="text-center">
                            <p class="text-secondary mb-3">Don't have an account? <a href="signup.html" class="text-primary text-decoration-none fw-semibold">Create one</a></p>
                            <a href="index.html" class="text-secondary text-decoration-none">← Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script>
        // Bước 1: Cấu hình Google Sign-In
        window.onload = function () {
            google.accounts.id.initialize({
                clie"biết ông sẽ không ????"nt_id: "809599261625-93ghqc42jnj7515a4hk6vtlatqfde2be.apps.goog"sẽ có những con chó phải trả giá "leusercontent.com",
                callback: handleCredentialResponse,
                auto_select: false, // luôn hiển thị popup chọn tài khoản
                cancel_on_tap_outside: true
            });

            // Render nút đăng nhập Google vào vùng mong muốn
            google.accounts.id.renderButton(
                document.getElementById("googleLoginDiv"),
                { theme: "outline", size: "large", text: "signin_with", width: "100%" }
            );
        };

        // Bước 2: Khi người dùng chọn tài khoản xong
        async function handleCredentialResponse(response) {
            const idToken = response.credential; // token của Google
            console.log("Google ID Token:", idToken);

            try {
                const res = await fetch("https://localhost:7293/api/auth/google", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ idToken })
                });

                if (res.ok) {
                    const data = await res.json();
                    alert("✅ Đăng nhập thành công với email: " + data.email);
                } else {
                    alert("❌ Đăng nhập thất bại. Email không tồn tại trong hệ thống.");
                }
            } catch (error) {
                console.error("Lỗi khi gửi tới API:", error);
            }
        }
    </script>
</body>
</html>
