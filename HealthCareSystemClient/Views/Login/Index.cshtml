@model BusinessObjects.DataTransferObjects.AuthDTOs.LoginRequest
@{
    Layout = "_LayoutLogin";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-5">
        <div class="text-center mb-4">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand text-decoration-none">
                <i class="fas fa-heartbeat me-2"></i>HealthCareSystem
            </a>
        </div>
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-2">Welcome back</h2>
                    <p class="text-secondary">Sign in to access your health dashboard</p>
                </div>
                <form asp-action="Index"
                      asp-route-returnUrl="@returnUrl"
                      method="post"
                      novalidate>
                    @Html.AntiForgeryToken()
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div asp-validation-summary="ModelOnly"></div>
                        </div>
                    }
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control form-control-lg" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control form-control-lg" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-4 form-check">
                        <input type="checkbox" class="form-check-input" id="remember" name="remember">
                        <label class="form-check-label text-secondary" for="remember">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-4">Sign In</button>
                </form>
                <div id="googleLoginDiv" class="mb-4 text-center"></div>

                <form id="googleForm" method="post" asp-action="GoogleLogin">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="GoogleToken" name="googleToken" />
                </form>
                <div class="text-center">
                    <p class="text-secondary mb-3">Don't have an account? <a asp-controller="Register" asp-action="Index" class="text-primary text-decoration-none fw-semibold">Create one</a></p>
                    <a asp-action="Index" asp-controller="Home" class="text-secondary text-decoration-none">← Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://accounts.google.com/gsi/client" async defer></script>

    <script>
        window.onload = function () {
            google.accounts.id.initialize({
                clien'xxxxxxxxxxxxxxxxxxxxxxxxxxxxx't_id: "809599261625-93g'xxxxxxxxxxxxxxxxxxxxxxxxxxxxx'hqc42jnj7515a4hk6vtlatqfde2be.apps.'xxxxxxxxxxxxxxxxxxxxxxxxxxxxx'googleusercontent.com",
                callback: handleCredentialResponse
            });

            google.accounts.id.renderButton(
                document.getElementById("googleLoginDiv"),
                { theme: "outline", size: "large", text: "signin_with" }
            );
        };

        function handleCredentialResponse(response) {
            document.getElementById("GoogleToken").value = response.credential;
            document.getElementById("googleForm").submit();
        }
    </script>
}