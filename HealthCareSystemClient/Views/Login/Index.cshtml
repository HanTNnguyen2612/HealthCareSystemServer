@{
    Layout = "_LayoutLogin";
}

<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-5">
        <div class="text-center mb-4">
            <a href="index.html" class="navbar-brand text-decoration-none">
                <i class="fas fa-heartbeat me-2"></i>HealthCareSystem
            </a>
        </div>
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-2">Welcome back</h2>
                    <p class="text-secondary">Sign in to access your health dashboard</p>
                </div>
                <form id="loginForm">
                    <div class="mb-4">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control form-control-lg" id="email" required>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control form-control-lg" id="password" required>
                    </div>
                    <div class="mb-4 form-check">
                        <input type="checkbox" class="form-check-input" id="remember">
                        <label class="form-check-label text-secondary" for="remember">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-4">Sign In</button>
                </form>
                <div class="text-center">
                    <p class="text-secondary mb-3">Don't have an account? <a asp-controller="Register" asp-action="Index" class="text-primary text-decoration-none fw-semibold">Create one</a></p>
                    <a asp-action="Index" asp-controller="Home" class="text-secondary text-decoration-none">← Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="login.js"></script>