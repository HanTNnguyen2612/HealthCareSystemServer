<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HealthCare Plus</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="sidebar-title">Admin Panel</div>
        </div>
        <nav class="sidebar-nav">
            <a asp-controller="Admin" asp-action="Index" class="sidebar-item @(ViewData["ActiveMenu"] == "Dashboard" ? "active" : "")">
                <div class="sidebar-icon">
                    <i class="fas fa-tachometer-alt"></i>
                </div>
                <span class="sidebar-text">Dashboard</span>
            </a>
            <a asp-controller="Admin" asp-action="Users" class="sidebar-item @(ViewData["ActiveMenu"] == "UserManagement" ? "active" : "")">
                <div class="sidebar-icon">
                    <i class="fas fa-users"></i>
                </div>
                <span class="sidebar-text">User Management</span>
            </a>
            <form asp-controller="Login" asp-action="Logout" method="post" class="sidebar-item p-0 m-0 border-0 bg-transparent" onsubmit="return confirm('Are you sure you want to logout?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="sidebar-item w-100 text-start bg-transparent border-0">
                    <div class="sidebar-icon">
                        <i class="fas fa-sign-out-alt"></i>
                    </div>
                    <span class="sidebar-text">Logout</span>
                </button>
            </form>
        </nav>
    </div>

    @RenderBody()

</body>
</html>
