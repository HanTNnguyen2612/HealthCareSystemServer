<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HealthCareSystem</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <i class="fas fa-heartbeat"></i>
            </div>
            <div class="sidebar-title">HealthCareSystem</div>
        </div>
        <nav class="sidebar-nav">
            <a asp-controller="Doctor" asp-action="Index" class="sidebar-item @(ViewData["ActiveMenu"] == "Dashboard" ? "active" : "")">
                <div class="sidebar-icon">
                    <i class="fas fa-home"></i>
                </div>
                <span class="sidebar-text">Dashboard</span>
            </a>
            <a asp-controller="Doctor" asp-action="Appointments" class="sidebar-item @(ViewData["ActiveMenu"] == "Appointments" ? "active" : "")">
                <div class="sidebar-icon">
                    <i class="fas fa-calendar"></i>
                </div>
                <span class="sidebar-text">Appointments</span>
            </a>
            <a asp-controller="Doctor" asp-action="Calendar" class="sidebar-item @(ViewData["ActiveMenu"] == "Calendar" ? "active" : "")">
                <div class="sidebar-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <span class="sidebar-text">Calendar</span>
            </a>
            <a asp-controller="Doctor" asp-action="Patients" class="sidebar-item @(ViewData["ActiveMenu"] == "Patients" ? "active" : "")">
                <div class="sidebar-icon">
                    <i class="fas fa-users"></i>
                </div>
                <span class="sidebar-text">My Patients</span>
            </a>
            <a asp-controller="Doctor" asp-action="Messages" class="sidebar-item @(ViewData["ActiveMenu"] == "Messages" ? "active" : "")">
                <div class="sidebar-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <span class="sidebar-text">Messages</span>
            </a>
            <a asp-controller="Doctor" asp-action="Schedule" class="sidebar-item @(ViewData["ActiveMenu"] == "Schedule" ? "active" : "")">
                <div class="sidebar-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <span class="sidebar-text">Schedule</span>
            </a>
            <a asp-controller="Doctor" asp-action="Profile" class="sidebar-item @(ViewData["ActiveMenu"] == "Profile" ? "active" : "")">
                <div class="sidebar-icon">
                    <i class="fas fa-user-md"></i>
                </div>
                <span class="sidebar-text">Profile</span>
            </a>
            <form asp-controller="Login" asp-action="Logout" method="post" class="sidebar-item p-0 m-0 border-0 bg-transparent" onsubmit="return confirm('Are you sure you want to logout?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="sidebar-item w-100 text-start bg-transparent border-0">
                    <div class="sidebar-icon">
                        <i class="fas fa-sign-out-alt"></i>
                    </div>
                    <span class="sidebar-text">Logout</span>
                </button>
            </form>
        </nav>
    </div>

    @RenderBody()
</body>
</html>
