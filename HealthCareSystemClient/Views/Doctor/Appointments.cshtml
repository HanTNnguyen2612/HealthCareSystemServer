@model BusinessObjects.DataTransferObjects.DoctorDTOs.DoctorProfileDTO

@{
    Layout = "_LayoutDoctor";
}

@section Styles {
    <link href="~/css/doctor-appointments.css" rel="stylesheet" />
}
<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <partial name="_Header" />

    <!-- Content -->
    <div class="content">
        <!-- Appointment Tabs -->
        <div class="dashboard-card">
            <div class="card-content">
                <ul class="nav nav-tabs" id="appointmentTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">
                            Pending
                            <span class="badge bg-warning ms-2" id="pendingCount">@ViewBag.PendingCount</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="today-tab" data-bs-toggle="tab" data-bs-target="#today" type="button" role="tab">
                            Today
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab">
                            Upcoming
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab">
                            Completed
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="cancelled-tab" data-bs-toggle="tab" data-bs-target="#cancelled" type="button" role="tab">
                            Cancelled
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="appointmentTabContent">
                    <!-- Pending Appointments -->
                    <div class="tab-pane fade" id="pending" role="tabpanel">
                        <div class="alert alert-info mb-3">
                            <i class="fas fa-info-circle me-2"></i>
                            Review and approve pending appointment requests from patients.
                        </div>
                        <div class="appointments-detailed-list" id="pendingAppointments">
                            @if (ViewBag.PendingAppointments != null)
                            {
                                @foreach (var appointment in (List<BusinessObjects.DataTransferObjects.AppointmentDTOs.AppointmentResponse>)ViewBag.PendingAppointments)
                                {
                                    <div class="appointment-item-detailed">
                                        <div class="appointment-header">
                                            <div class="patient-info">
                                                <h6>@appointment.PatientName</h6>
                                                <p class="appointment-type">@(appointment.Notes ?? "General Consultation")</p>
                                            </div>
                                            <div class="appointment-time">
                                                <i class="fas fa-clock"></i>
                                                <span>@appointment.AppointmentDateTime.ToString("MMM dd, yyyy - HH:mm")</span>
                                            </div>
                                        </div>
                                        <div class="appointment-details">
                                            <p><strong>Notes:</strong> @(appointment.Notes ?? "No additional notes")</p>
                                        </div>
                                        <div class="appointment-actions">
                                            <form asp-action="ApproveAppointment" method="post" style="display: inline;">
                                                <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-check"></i> Approve
                                                </button>
                                            </form>
                                            <button class="btn btn-danger btn-sm" onclick="showRejectModal(@appointment.AppointmentId)">
                                                <i class="fas fa-times"></i> Reject
                                            </button>
                                            <a asp-action="AppointmentDetails" asp-route-id="@appointment.AppointmentId" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Details
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="no-appointments">
                                    <i class="fas fa-calendar-check"></i>
                                    <p>No pending appointments</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Today's Appointments -->
                    <div class="tab-pane fade show active" id="today" role="tabpanel">
                        <div class="appointments-detailed-list" id="todayAppointments">
                            @if (ViewBag.TodayAppointments != null)
                            {
                                @foreach (var appointment in (List<BusinessObjects.DataTransferObjects.AppointmentDTOs.AppointmentResponse>)ViewBag.TodayAppointments)
                                {
                                    <div class="appointment-item-detailed">
                                        <div class="appointment-header">
                                            <div class="patient-info">
                                                <h6>@appointment.PatientName</h6>
                                                <p class="appointment-type">@(appointment.Notes ?? "General Consultation")</p>
                                            </div>
                                            <div class="appointment-time">
                                                <i class="fas fa-clock"></i>
                                                <span>@appointment.AppointmentDateTime.ToString("HH:mm")</span>
                                                <span class="badge bg-@(appointment.Status == "Confirmed" ? "success" : "primary") ms-2">@appointment.Status</span>
                                            </div>
                                        </div>
                                        <div class="appointment-details">
                                            <p><strong>Notes:</strong> @(appointment.Notes ?? "No additional notes")</p>
                                        </div>
                                        <div class="appointment-actions">
                                            @if (appointment.Status == "Confirmed")
                                            {
                                                <button class="btn btn-primary btn-sm" onclick="showCompleteModal(@appointment.AppointmentId)">
                                                    <i class="fas fa-check-circle"></i> Mark Complete
                                                </button>
                                            }
                                            <a asp-action="AppointmentDetails" asp-route-id="@appointment.AppointmentId" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Details
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="no-appointments">
                                    <i class="fas fa-calendar-day"></i>
                                    <p>No appointments today</p>
                                </div>
                            }
                        </div>

                    </div>

                    <!-- Upcoming Appointments -->
                    <div class="tab-pane fade" id="upcoming" role="tabpanel">
                        <div class="appointments-detailed-list" id="upcomingAppointments">
                            @if (ViewBag.UpcomingAppointments != null)
                            {
                                @foreach (var appointment in (List<BusinessObjects.DataTransferObjects.AppointmentDTOs.AppointmentResponse>)ViewBag.UpcomingAppointments)
                                {
                                    <div class="appointment-item-detailed">
                                        <div class="appointment-header">
                                            <div class="patient-info">
                                                <h6>@appointment.PatientName</h6>
                                                <p class="appointment-type">@(appointment.Notes ?? "General Consultation")</p>
                                            </div>
                                            <div class="appointment-time">
                                                <i class="fas fa-clock"></i>
                                                <span>@appointment.AppointmentDateTime.ToString("MMM dd, yyyy - HH:mm")</span>
                                                <span class="badge bg-success ms-2">@appointment.Status</span>
                                            </div>
                                        </div>
                                        <div class="appointment-details">
                                            <p><strong>Notes:</strong> @(appointment.Notes ?? "No additional notes")</p>
                                        </div>
                                        <div class="appointment-actions">
                                            @if (appointment.Status == "Confirmed")
                                            {
                                                <button class="btn btn-primary btn-sm" onclick="showCompleteModal(@appointment.AppointmentId)">
                                                    <i class="fas fa-check-circle"></i> Mark Complete
                                                </button>
                                            }
                                            <a asp-action="AppointmentDetails" asp-route-id="@appointment.AppointmentId" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Details
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="no-appointments">
                                    <i class="fas fa-calendar-alt"></i>
                                    <p>No upcoming appointments</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Completed Appointments -->
                    <div class="tab-pane fade" id="completed" role="tabpanel">
                        <div class="appointments-detailed-list" id="completedAppointments">
                            @if (ViewBag.CompletedAppointments != null)
                            {
                                @foreach (var appointment in (List<BusinessObjects.DataTransferObjects.AppointmentDTOs.AppointmentResponse>)ViewBag.CompletedAppointments)
                                {
                                    <div class="appointment-item-detailed">
                                        <div class="appointment-header">
                                            <div class="patient-info">
                                                <h6>@appointment.PatientName</h6>
                                                <p class="appointment-type">@(appointment.Notes ?? "General Consultation")</p>
                                            </div>
                                            <div class="appointment-time">
                                                <i class="fas fa-clock"></i>
                                                <span>@appointment.AppointmentDateTime.ToString("MMM dd, yyyy - HH:mm")</span>
                                                <span class="badge bg-success ms-2">@appointment.Status</span>
                                            </div>
                                        </div>
                                        <div class="appointment-details">
                                           
                                            <p><strong>Notes:</strong> @(appointment.Notes ?? "No additional notes")</p>
                                        </div>
                                        <div class="appointment-actions">
                                            <a asp-action="AppointmentDetails" asp-route-id="@appointment.AppointmentId" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Details
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="no-appointments">
                                    <i class="fas fa-check-circle"></i>
                                    <p>No completed appointments</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Cancelled Appointments -->
                    <div class="tab-pane fade" id="cancelled" role="tabpanel">
                        <div class="appointments-detailed-list" id="cancelledAppointments">
                            @if (ViewBag.CancelledAppointments != null)
                            {
                                @foreach (var appointment in (List<BusinessObjects.DataTransferObjects.AppointmentDTOs.AppointmentResponse>)ViewBag.CancelledAppointments)
                                {
                                    <div class="appointment-item-detailed">
                                        <div class="appointment-header">
                                            <div class="patient-info">
                                                <h6>@appointment.PatientName</h6>
                                                <p class="appointment-type">@(appointment.Notes ?? "General Consultation")</p>
                                            </div>
                                            <div class="appointment-time">
                                                <i class="fas fa-clock"></i>
                                                <span>@appointment.AppointmentDateTime.ToString("MMM dd, yyyy - HH:mm")</span>
                                                <span class="badge bg-danger ms-2">@appointment.Status</span>
                                            </div>
                                        </div>
                                        <div class="appointment-details">
                                           
                                            <p><strong>Notes:</strong> @(appointment.Notes ?? "No additional notes")</p>
                                        </div>
                                        <div class="appointment-actions">
                                            <a asp-action="AppointmentDetails" asp-route-id="@appointment.AppointmentId" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Details
                                            </a>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="no-appointments">
                                    <i class="fas fa-times-circle"></i>
                                    <p>No cancelled appointments</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- New Appointment Modal -->
<div class="modal fade" id="newAppointmentModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Schedule New Appointment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="newAppointmentForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="patientSelect" class="form-label">Patient</label>
                            <select class="form-control" id="patientSelect" required>
                                <option value="">Select Patient</option>
                                <option value="1">John Doe</option>
                                <option value="2">Jane Smith</option>
                                <option value="3">Mike Johnson</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="appointmentType" class="form-label">Type</label>
                            <select class="form-control" id="appointmentType" required>
                                <option value="consultation">Consultation</option>
                                <option value="follow-up">Follow-up</option>
                                <option value="check-up">Check-up</option>
                                <option value="emergency">Emergency</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="appointmentDate" class="form-label">Date</label>
                            <input type="date" class="form-control" id="appointmentDate" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="appointmentTime" class="form-label">Time</label>
                            <select class="form-control" id="appointmentTime" required>
                                <option value="">Select Time</option>
                                <option value="09:00">9:00 AM</option>
                                <option value="09:30">9:30 AM</option>
                                <option value="10:00">10:00 AM</option>
                                <option value="10:30">10:30 AM</option>
                                <option value="11:00">11:00 AM</option>
                                <option value="11:30">11:30 AM</option>
                                <option value="14:00">2:00 PM</option>
                                <option value="14:30">2:30 PM</option>
                                <option value="15:00">3:00 PM</option>
                                <option value="15:30">3:30 PM</option>
                                <option value="16:00">4:00 PM</option>
                                <option value="16:30">4:30 PM</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="appointmentNotes" class="form-label">Notes</label>
                        <textarea class="form-control" id="appointmentNotes" rows="3" placeholder="Additional notes or instructions"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="scheduleAppointment()">Schedule</button>
            </div>
        </div>
    </div>
</div>

<!-- Complete Appointment Modal -->
<div class="modal fade" id="completeAppointmentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Complete Appointment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Are you sure you want to mark this appointment as completed?
                </div>
                <div id="appointmentInfo">
                    <p><strong>Patient:</strong> <span id="modalPatientName"></span></p>
                    <p><strong>Date & Time:</strong> <span id="modalAppointmentDate"></span></p>
                    <p><strong>Notes:</strong> <span id="modalAppointmentNotes"></span></p>
                </div>
                <form id="completeAppointmentForm" asp-action="CompleteAppointment" method="post">
                    <input type="hidden" id="completeAppointmentId" name="appointmentId" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitComplete()">
                    <i class="fas fa-check-circle"></i> Mark Complete
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Reject Appointment Modal -->
<div class="modal fade" id="rejectAppointmentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Appointment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="rejectAppointmentForm" asp-action="RejectAppointment" method="post">
                    <input type="hidden" id="rejectAppointmentId" name="appointmentId" />
                    <div class="mb-3">
                        <label for="rejectReason" class="form-label">Reason for rejection (Optional)</label>
                        <textarea class="form-control" id="rejectReason" name="reason" rows="3" placeholder="Please provide a reason for rejecting this appointment..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="submitReject()">Reject Appointment</button>
            </div>
        </div>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 9999;">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 9999;">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<script>
    function showRejectModal(appointmentId) {
        document.getElementById('rejectAppointmentId').value = appointmentId;
        var modal = new bootstrap.Modal(document.getElementById('rejectAppointmentModal'));
        modal.show();
    }

    function submitReject() {
        document.getElementById('rejectAppointmentForm').submit();
    }

    function showCompleteModal(appointmentId) {
        // Set appointment ID
        document.getElementById('completeAppointmentId').value = appointmentId;

        // Fetch appointment info
        fetch('/Doctor/GetAppointmentInfo?appointmentId=' + appointmentId)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('modalPatientName').textContent = data.patientName;
                    document.getElementById('modalAppointmentDate').textContent = data.appointmentDate;
                    document.getElementById('modalAppointmentNotes').textContent = data.notes;
                } else {
                    alert('Error loading appointment information: ' + data.message);
                    return;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error loading appointment information');
                return;
            });

        // Show modal
        var modal = new bootstrap.Modal(document.getElementById('completeAppointmentModal'));
        modal.show();
    }

    function submitComplete() {
        // Add loading state
        var submitBtn = document.querySelector('#completeAppointmentModal .btn-primary');
        var originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
        submitBtn.disabled = true;

        // Submit form
        document.getElementById('completeAppointmentForm').submit();
    }

    // Auto-hide alerts after 5 seconds
    setTimeout(function() {
        var alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            var bootstrapAlert = new bootstrap.Alert(alert);
            bootstrapAlert.close();
        });
    }, 5000);
</script>