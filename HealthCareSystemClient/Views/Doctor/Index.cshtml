@{
    Layout = "_LayoutDoctor";
    ViewData["Title"] = "Dashboard";
}
<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <header class="header">
        <h1 class="header-title">Doctor Dashboard</h1>
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search patients, appointments..." id="searchInput">
        </div>
        <div class="header-actions">
            <button class="notification-btn">
                <i class="fas fa-bell"></i>
                <span class="notification-badge">5</span>
            </button>
            <div class="user-profile" onclick="window.location.href='doctor-profile.html'">
                <img src="/placeholder.svg?height=32&width=32" alt="Doctor" class="user-avatar">
                <div class="user-info">
                    <h6 id="doctorName">Dr. Sarah Johnson</h6>
                    <p>Cardiologist</p>
                </div>
            </div>
        </div>
    </header>

    <!-- Content -->
    <div class="content">
        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon blue">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stat-content">
                    <h3>8</h3>
                    <p>Today's Appointments</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon green">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <h3>156</h3>
                    <p>Total Patients</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon cyan">
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="stat-content">
                    <h3>12</h3>
                    <p>Unread Messages</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon yellow">
                    <i class="fas fa-star"></i>
                </div>
                <div class="stat-content">
                    <h3>4.9</h3>
                    <p>Average Rating</p>
                </div>
            </div>
        </div>

        <!-- Dashboard Layout with Sidebar -->
        <div class="dashboard-with-sidebar">
            <!-- Main Dashboard Content -->
            <div class="dashboard-main">
                <!-- Today's Schedule -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h5 class="card-title">Today's Schedule</h5>
                        <a href="doctor-appointments.html" class="view-all-link">View All</a>
                    </div>
                    <div class="card-content">
                        <div class="appointments-list" id="todaySchedule">
                            <!-- Populated by JavaScript -->
                        </div>
                    </div>
                </div>

                <!-- Recent Patients -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h5 class="card-title">Recent Patients</h5>
                        <a href="doctor-patients.html" class="view-all-link">View All</a>
                    </div>
                    <div class="card-content">
                        <div class="patients-list" id="recentPatients">
                            <!-- Populated by JavaScript -->
                        </div>
                    </div>
                </div>

                <!-- Patient Statistics -->
                <div class="dashboard-card full-width-card">
                    <div class="card-header">
                        <h5 class="card-title">Patient Statistics</h5>
                    </div>
                    <div class="card-content">
                        <div class="patient-stats-grid">
                            <div class="patient-stat-item">
                                <div class="stat-header">
                                    <div class="stat-icon-small bg-primary">
                                        <i class="fas fa-user-plus"></i>
                                    </div>
                                    <div class="stat-info">
                                        <h6>New Patients</h6>
                                        <span class="stat-number">23</span>
                                        <span class="stat-period">This Month</span>
                                    </div>
                                </div>
                            </div>
                            <div class="patient-stat-item">
                                <div class="stat-header">
                                    <div class="stat-icon-small bg-success">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                    <div class="stat-info">
                                        <h6>Completed Visits</h6>
                                        <span class="stat-number">89</span>
                                        <span class="stat-period">This Month</span>
                                    </div>
                                </div>
                            </div>
                            <div class="patient-stat-item">
                                <div class="stat-header">
                                    <div class="stat-icon-small bg-warning">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="stat-info">
                                        <h6>Pending Reviews</h6>
                                        <span class="stat-number">7</span>
                                        <span class="stat-period">Awaiting</span>
                                    </div>
                                </div>
                            </div>
                            <div class="patient-stat-item">
                                <div class="stat-header">
                                    <div class="stat-icon-small bg-info">
                                        <i class="fas fa-calendar-plus"></i>
                                    </div>
                                    <div class="stat-info">
                                        <h6>Follow-ups</h6>
                                        <span class="stat-number">15</span>
                                        <span class="stat-period">Scheduled</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Sidebar -->
            <div class="calendar-sidebar-widget">
                <!-- Quick Actions -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h5 class="card-title">Quick Actions</h5>
                    </div>
                    <div class="card-content">
                        <div class="quick-actions">
                            <button class="action-item" onclick="openNewAppointmentModal()">
                                <div class="action-icon blue">
                                    <i class="fas fa-calendar-plus"></i>
                                </div>
                                <div class="action-content">
                                    <h6>New Appointment</h6>
                                    <p>Schedule patient visit</p>
                                </div>
                            </button>
                            <button class="action-item" onclick="window.location.href='doctor-patients.html'">
                                <div class="action-icon green">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                                <div class="action-content">
                                    <h6>Add Patient</h6>
                                    <p>Register new patient</p>
                                </div>
                            </button>
                            <button class="action-item" onclick="window.location.href='doctor-messages.html'">
                                <div class="action-icon cyan">
                                    <i class="fas fa-comments"></i>
                                </div>
                                <div class="action-content">
                                    <h6>Messages</h6>
                                    <p>Check patient messages</p>
                                </div>
                            </button>
                            <button class="action-item" onclick="window.location.href='doctor-schedule.html'">
                                <div class="action-icon yellow">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="action-content">
                                    <h6>Set Schedule</h6>
                                    <p>Manage availability</p>
                                </div>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Urgent Notifications -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h5 class="card-title">Urgent Notifications</h5>
                    </div>
                    <div class="card-content">
                        <div class="notifications-list" id="urgentNotifications">
                            <!-- Populated by JavaScript -->
                        </div>
                    </div>
                </div>

                <!-- This Week Summary -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h5 class="card-title">This Week</h5>
                    </div>
                    <div class="card-content">
                        <div class="week-stats">
                            <div class="week-stat-item">
                                <div class="week-stat-number">32</div>
                                <div class="week-stat-label">Appointments</div>
                            </div>
                            <div class="week-stat-item">
                                <div class="week-stat-number">8</div>
                                <div class="week-stat-label">New Patients</div>
                            </div>
                            <div class="week-stat-item">
                                <div class="week-stat-number">12</div>
                                <div class="week-stat-label">Follow-ups</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- New Appointment Modal -->
<div class="modal fade" id="newAppointmentModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Schedule New Appointment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="newAppointmentForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="patientSelect" class="form-label">Patient</label>
                            <select class="form-control" id="patientSelect" required>
                                <option value="">Select Patient</option>
                                <option value="1">John Doe</option>
                                <option value="2">Jane Smith</option>
                                <option value="3">Mike Johnson</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="appointmentType" class="form-label">Type</label>
                            <select class="form-control" id="appointmentType" required>
                                <option value="consultation">Consultation</option>
                                <option value="follow-up">Follow-up</option>
                                <option value="check-up">Check-up</option>
                                <option value="emergency">Emergency</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="appointmentDate" class="form-label">Date</label>
                            <input type="date" class="form-control" id="appointmentDate" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="appointmentTime" class="form-label">Time</label>
                            <select class="form-control" id="appointmentTime" required>
                                <option value="">Select Time</option>
                                <option value="09:00">9:00 AM</option>
                                <option value="09:30">9:30 AM</option>
                                <option value="10:00">10:00 AM</option>
                                <option value="10:30">10:30 AM</option>
                                <option value="11:00">11:00 AM</option>
                                <option value="11:30">11:30 AM</option>
                                <option value="14:00">2:00 PM</option>
                                <option value="14:30">2:30 PM</option>
                                <option value="15:00">3:00 PM</option>
                                <option value="15:30">3:30 PM</option>
                                <option value="16:00">4:00 PM</option>
                                <option value="16:30">4:30 PM</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="appointmentNotes" class="form-label">Notes</label>
                        <textarea class="form-control" id="appointmentNotes" rows="3" placeholder="Additional notes or instructions"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="scheduleAppointment()">Schedule</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/doctor/dashboard.js"></script>