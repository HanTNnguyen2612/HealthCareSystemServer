@{
    Layout = "_LayoutDoctor";
    ViewData["Title"] = "Profile";
}
<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <header class="header">
        <h1 class="header-title">My Profile</h1>
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search..." id="searchInput">
        </div>
        <div class="header-actions">
            <button class="notification-btn">
                <i class="fas fa-bell"></i>
                <span class="notification-badge">5</span>
            </button>
            <div class="user-profile">
                <img src="/placeholder.svg?height=32&width=32" alt="Doctor" class="user-avatar">
                <div class="user-info">
                    <h6 id="doctorName">Dr. Sarah Johnson</h6>
                    <p>Cardiologist</p>
                </div>
            </div>
        </div>
    </header>

    <!-- Profile Content -->
    <div class="content">
        <div class="profile-content">
            <!-- Professional Information -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Professional Information</h5>
                    <button class="edit-profile-btn" onclick="editProfessionalInfo()">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-content">
                    <div class="profile-info">
                        <div class="profile-avatar-section">
                            <div class="profile-avatar-container">
                                <img src="/placeholder.svg?height=120&width=120" alt="Profile" class="profile-avatar-xl">
                                <button class="avatar-edit-btn" onclick="changeAvatar()">
                                    <i class="fas fa-camera"></i>
                                </button>
                            </div>
                            <div class="profile-basic-info">
                                <h4 id="profileName">Dr. Sarah Johnson</h4>
                                <p id="profileSpecialty">Cardiologist</p>
                                <p id="profileEmail">sarah.johnson@healthcare.com</p>
                                <div class="profile-badges">
                                    <span class="profile-badge verified">
                                        <i class="fas fa-check-circle"></i> Board Certified
                                    </span>
                                    <span class="profile-badge member">
                                        <i class="fas fa-star"></i> 15 Years Experience
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="profile-details-grid">
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-graduation-cap"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Medical School</span>
                                    <span class="detail-value" id="medicalSchool">Harvard Medical School</span>
                                </div>
                            </div>
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-certificate"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">License Number</span>
                                    <span class="detail-value">MD123456789</span>
                                </div>
                            </div>
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-hospital"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Hospital Affiliation</span>
                                    <span class="detail-value">City General Hospital</span>
                                </div>
                            </div>
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Office Phone</span>
                                    <span class="detail-value">+1 (555) 123-4567</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Practice Statistics -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Practice Statistics</h5>
                </div>
                <div class="card-content">
                    <div class="practice-stats-grid">
                        <div class="practice-stat-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-primary">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Total Patients</h6>
                                    <span class="metric-value">1,247</span>
                                </div>
                            </div>
                        </div>
                        <div class="practice-stat-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-success">
                                    <i class="fas fa-calendar-check"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Appointments This Month</h6>
                                    <span class="metric-value">156</span>
                                </div>
                            </div>
                        </div>
                        <div class="practice-stat-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-warning">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Average Rating</h6>
                                    <span class="metric-value">4.9/5</span>
                                </div>
                            </div>
                        </div>
                        <div class="practice-stat-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-info">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Years of Practice</h6>
                                    <span class="metric-value">15</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Specializations & Certifications -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Specializations & Certifications</h5>
                    <button class="edit-profile-btn" onclick="editSpecializations()">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-content">
                    <div class="specializations-section">
                        <div class="specialization-category">
                            <h6>Primary Specialization</h6>
                            <div class="specialization-tags">
                                <span class="specialization-tag primary">Cardiology</span>
                            </div>
                        </div>
                        <div class="specialization-category">
                            <h6>Sub-specializations</h6>
                            <div class="specialization-tags">
                                <span class="specialization-tag">Interventional Cardiology</span>
                                <span class="specialization-tag">Cardiac Electrophysiology</span>
                                <span class="specialization-tag">Heart Failure</span>
                            </div>
                        </div>
                        <div class="specialization-category">
                            <h6>Board Certifications</h6>
                            <div class="specialization-tags">
                                <span class="specialization-tag certification">American Board of Internal Medicine</span>
                                <span class="specialization-tag certification">American Board of Cardiovascular Disease</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Schedule & Availability -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Schedule & Availability</h5>
                    <button class="edit-profile-btn" onclick="editSchedule()">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-content">
                    <div class="schedule-grid" style="border: none; display: grid; grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr;">
                        <div class="schedule-day">
                            <h6>Monday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Tuesday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Wednesday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Thursday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Friday</h6>
                            <p>9:00 AM - 3:00 PM</p>
                        </div>
                        <div class="schedule-day weekend">
                            <h6>Saturday</h6>
                            <p>Closed</p>
                        </div>
                        <div class="schedule-day weekend">
                            <h6>Sunday</h6>
                            <p>Closed</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Settings -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Account Settings</h5>
                </div>
                <div class="card-content">
                    <div class="settings-list">
                        <div class="setting-item">
                            <div class="setting-info">
                                <i class="fas fa-bell setting-icon"></i>
                                <div>
                                    <h6>Email Notifications</h6>
                                    <p>Receive notifications for new appointments and messages</p>
                                </div>
                            </div>
                            <div class="setting-toggle">
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div class="setting-info">
                                <i class="fas fa-mobile-alt setting-icon"></i>
                                <div>
                                    <h6>SMS Notifications</h6>
                                    <p>Receive text messages for urgent patient matters</p>
                                </div>
                            </div>
                            <div class="setting-toggle">
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div class="setting-info">
                                <i class="fas fa-calendar setting-icon"></i>
                                <div>
                                    <h6>Auto-accept Appointments</h6>
                                    <p>Automatically accept appointments during available hours</p>
                                </div>
                            </div>
                            <div class="setting-toggle">
                                <label class="switch">
                                    <input type="checkbox">
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div class="setting-info">
                                <i class="fas fa-lock setting-icon"></i>
                                <div>
                                    <h6>Two-Factor Authentication</h6>
                                    <p>Add an extra layer of security to your account</p>
                                </div>
                            </div>
                            <div class="setting-toggle">
                                <label class="switch">
                                    <input type="checkbox">
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Professional Info Modal -->
<div class="modal fade" id="editProfessionalModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Professional Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editProfessionalForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editFirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="editFirstName">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editLastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="editLastName">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editSpecialty" class="form-label">Primary Specialty</label>
                            <select class="form-control" id="editSpecialty">
                                <option value="cardiology">Cardiology</option>
                                <option value="dermatology">Dermatology</option>
                                <option value="neurology">Neurology</option>
                                <option value="orthopedics">Orthopedics</option>
                                <option value="pediatrics">Pediatrics</option>
                                <option value="general">General Medicine</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="editEmail">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editPhone" class="form-label">Office Phone</label>
                            <input type="tel" class="form-control" id="editPhone">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editLicense" class="form-label">License Number</label>
                            <input type="text" class="form-control" id="editLicense">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editMedicalSchool" class="form-label">Medical School</label>
                        <input type="text" class="form-control" id="editMedicalSchool">
                    </div>
                    <div class="mb-3">
                        <label for="editHospital" class="form-label">Hospital Affiliation</label>
                        <input type="text" class="form-control" id="editHospital">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveProfessionalInfo()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/doctor/profile.js"></script>
