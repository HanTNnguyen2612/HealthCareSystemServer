@using HealthCareSystemClient.Models
@model DoctorViewPatientViewModel
@{
    Layout = "_LayoutDoctor";
    ViewData["Title"] = "Patients";
    var apiBaseUrl = "https://localhost:7293";
    var fullname = Context.Session.GetString("FullName");
    var role = Context.Session.GetString("Role");
    var avatarUrl = Context.Session.GetString("AvatarUrl");
    string profileUrl = "/Doctor/Profile";
}

<script>
    const API_BASE_URL = "@apiBaseUrl";
    const CURRENT_USER_ID = @Model.UserId;
</script>
<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <header class="header">
        <h1 class="header-title">My Patients</h1>
        <div class="header-actions">
            <button class="btn btn-primary" onclick="openAddPatientModal()">
                <i class="fas fa-user-plus"></i>
                Add Patient
            </button>
            <button class="notification-btn">
                <i class="fas fa-bell"></i>
                <span class="notification-badge">5</span>
            </button>
            <div class="user-profile" onclick="window.location.href='@profileUrl'">
                <img src=@avatarUrl alt="Doctor" class="user-avatar">
                <div class="user-info">
                    <h6 id="doctorName">@fullname</h6>
                    <p>@role</p>
                </div>
            </div>
        </div>
    </header>

    <!-- Content -->
    <div class="content">
        <!-- Patient Filters -->
        <div class="dashboard-card">
            <div class="card-content">
                <div class="patient-filters">
                    <button class="filter-btn active" onclick="filterPatients('all')">All Patients</button>
                    <button class="filter-btn" onclick="filterPatients('active')">Active</button>
                    <button class="filter-btn" onclick="filterPatients('critical')">Critical</button>
                    <button class="filter-btn" onclick="filterPatients('follow-up')">Follow-up</button>
                    <button class="filter-btn" onclick="filterPatients('new')">New</button>
                </div>
            </div>
        </div>

        <!-- Patients Grid -->
        <div class="patients-grid" id="patientsGrid">
            <!-- Populated by JavaScript -->
        </div>
    </div>
</div>

<!-- Add Patient Modal -->
<div class="modal fade" id="addPatientModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Patient</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addPatientForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="firstName" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="lastName" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="phone" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="dateOfBirth" class="form-label">Date of Birth</label>
                            <input type="date" class="form-control" id="dateOfBirth" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="gender" class="form-label">Gender</label>
                            <select class="form-control" id="gender" required>
                                <option value="">Select Gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <textarea class="form-control" id="address" rows="2"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="emergencyContact" class="form-label">Emergency Contact</label>
                            <input type="text" class="form-control" id="emergencyContact">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="emergencyPhone" class="form-label">Emergency Phone</label>
                            <input type="tel" class="form-control" id="emergencyPhone">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="medicalHistory" class="form-label">Medical History</label>
                        <textarea class="form-control" id="medicalHistory" rows="3" placeholder="Brief medical history..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="addPatient()">Add Patient</button>
            </div>
        </div>
    </div>
</div>

<!-- Patient Details Modal -->
<div class="modal fade" id="patientDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="patientDetailsTitle">Patient Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="patientDetailsBody">
                <!-- Populated by JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="scheduleAppointmentForPatient()">Schedule Appointment</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/doctor/patients.js"></script>
