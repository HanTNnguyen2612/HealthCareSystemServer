<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="fade-in-up">
                    <p class="text-primary fw-semibold mb-3">HealthCare Plus / For Patients</p>
