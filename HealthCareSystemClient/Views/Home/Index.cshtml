                    <div class="d-flex flex-column flex-sm-row gap-3">
                        <a href="signup-steps.html" class="btn btn-primary btn-lg">Get Started Today</a>
                        <a href="#services" class="btn btn-outline-primary btn-lg">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <img src="https://cdn.prod.website-files.com/67e7b5afe8bf66dfb6f67bab/67ea40789e55e876840edfbb_faq%20image.webp" alt="Healthcare Illustration" class="img-fluid" style="max-width: 500px;">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="section-padding bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="display-4 fw-bold mb-4">Everything you need for better health</h2>
                <p class="lead">Comprehensive healthcare solutions designed around your needs</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-4">
                            <i class="fas fa-robot"></i>
                        </div>
                        <h4 class="fw-bold mb-3">AI Health Assistant</h4>
                        <p class="text-secondary">Get instant, personalized health guidance and symptom analysis from our advanced AI system, available 24/7.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-4">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Smart Scheduling</h4>
                        <p class="text-secondary">Book appointments with specialists instantly. Our system finds the perfect match based on your needs and location.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-4">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Expert Network</h4>
                        <p class="text-secondary">Access to board-certified specialists and healthcare professionals across all medical disciplines.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <img src="https://cdn.prod.website-files.com/67e7b5afe8bf66dfb6f67bab/680f4113d06392f6061349ad_b776eaabe14ba9a4f5e4ca05d5431436_aboutus%20image.webp" alt="About Us" class="img-fluid rounded-3">
