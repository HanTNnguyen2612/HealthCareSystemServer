<script>
    // Show appointment details
    function showAppointmentDetails(appointmentId) {
        fetch(`/User/AppointmentDetails?id=${appointmentId}`)
            .then(response => response.text())
            .then(html => {
                document.getElementById('appointmentDetailsContent').innerHTML = html;
                var modal = new bootstrap.Modal(document.getElementById('appointmentDetailsModal'));
                modal.show();
            })
            .catch(error => {
                console.error('Error loading appointment details:', error);
                alert('Error loading appointment details');
            });
    }

    // Show reschedule modal
    function showRescheduleModal(appointmentId) {

        const url = `/User/RescheduleAppointment?id=${appointmentId}`;

        fetch(url)
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.text();
            })
            .then(html => {

                const contentDiv = document.getElementById('rescheduleAppointmentContent');
                if (contentDiv) {
                    contentDiv.innerHTML = html;

                    const modalElement = document.getElementById('rescheduleAppointmentModal');
                    if (modalElement) {
                        var modal = new bootstrap.Modal(modalElement);
                        modal.show();

                        // Setup modal functionality after content is loaded
                        setTimeout(() => {
                            setupRescheduleModal();
                        }, 100);
                    } else {
                        console.error('Modal element not found!');
                    }
                } else {
                    console.error('Content div not found!');
                }
            })
            .catch(error => {
                console.error('Error loading reschedule form:', error);
                alert('Error loading reschedule form: ' + error.message);
            });
    }

    // Setup reschedule modal functionality
    function setupRescheduleModal() {

        const dateInput = document.getElementById('rescheduleDate');
        const timeSelect = document.getElementById('rescheduleTime');
        const doctorId = document.getElementById('hiddenDoctorId')?.value;
        const appointmentId = document.getElementById('hiddenAppointmentId')?.value;

        if (!dateInput || !timeSelect || !doctorId || !appointmentId) {
            console.error('Required elements not found!');
            return;
        }



        function loadTimeSlots(inputElement) {
            const date = inputElement.value;

            if (date && doctorId && appointmentId) {
                timeSelect.innerHTML = '<option value="">Loading...</option>';

                const url = `/User/GetAvailableTimeSlotsForReschedule?doctorId=${doctorId}&date=${date}&excludeAppointmentId=${appointmentId}`;

                fetch(url)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }
                        return response.text();
                    })
                    .then(html => {
                        timeSelect.innerHTML = html;

                        // Count available options
                        const options = timeSelect.querySelectorAll('option:not([disabled])');

                    })
                    .catch(error => {
                        console.error('Error loading time slots:', error);
                        timeSelect.innerHTML = '<option value="">Error loading time slots</option>';
                    });
            } else {
                console.log('🔥 Missing required data:', { date, doctorId, appointmentId });
                timeSelect.innerHTML = '<option value="">Choose date first</option>';
            }
        }

        // Remove existing listeners to prevent duplicates
        const newDateInput = dateInput.cloneNode(true);
        dateInput.parentNode.replaceChild(newDateInput, dateInput);



        // Add event listener
        newDateInput.addEventListener('change', function() {
            loadTimeSlots(this);
        });

        // Load time slots immediately if date is already set
        if (newDateInput.value) {
            loadTimeSlots(newDateInput);
        }
    }

    // Cancel appointment
    function cancelAppointment(appointmentId) {
        if (confirm('Are you sure you want to cancel this appointment?')) {
            fetch(`/User/CancelAppointment`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: `id=${appointmentId}`
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Error cancelling appointment');
                }
            })
            .catch(error => {
                console.error('Error cancelling appointment:', error);
                alert('Error cancelling appointment');
            });
        }
    }

    // Submit reschedule form
    function submitRescheduleForm() {
        document.getElementById('rescheduleForm').submit();
    }

