@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Doctors";
    var apiBaseUrl = "https://localhost:7293";
}
<script>
    const API_BASE_URL = "@apiBaseUrl";
</script>
<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <header class="header">
        <h1 class="header-title">Find Doctors</h1>
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search doctors or specialties..." id="searchInput">
        </div>
        <div class="header-actions">
            <button class="notification-btn">
                <i class="fas fa-bell"></i>
                <span class="notification-badge">3</span>
            </button>
            <a asp-action="Profile" asp-controller="User" style="text-decoration: none;">
                <div class="user-profile">
                    <img src="@(ViewBag.CurrentUser?.AvatarUrl ?? "/images/default-user.png")" alt="User" class="user-avatar">
                    <div class="user-info">
                        <h6 id="userName">@(ViewBag.CurrentUser?.FullName ?? "User")</h6>
                        <p>Patient</p>
                    </div>
                </div>
            </a>
        </div>
    </header>

    <!-- Content -->
    <div class="content">
        <!-- Doctors Grid -->
        <div class="dashboard-grid">
            <div class="dashboard-card span-2">
                <div class="card-header">
                    <h5 class="card-title">Available Doctors</h5>
                </div>
                <div class="card-content">
                    <div class="doctors-grid" id="doctorsGrid">
                        <!-- Populated by JavaScript -->
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h5 class="card-title">Filter by Specialty</h5>
                </div>
                <div class="card-content">
                    <div class="specialty-filters" id="specialtyFilters">
                        <!-- Populated by JavaScript -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/user/doctors.js"></script>
