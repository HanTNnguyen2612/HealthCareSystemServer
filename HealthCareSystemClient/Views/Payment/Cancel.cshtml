@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Payment Cancelled";
}

<div class="main-content">
    <header class="header">
        <h1 class="header-title">Payment Cancelled</h1>
    </header>

    <div class="content">
        <div class="dashboard-card">
            <div class="card-content text-center">
                <div class="alert alert-warning">
                    <i class="fas fa-times-circle fa-3x mb-3"></i>
                    <h4>Payment Cancelled</h4>
                    <p>@ViewBag.Message</p>
                    @if (ViewBag.OrderCode != null)
                    {
                        <p><strong>Order Code:</strong> @ViewBag.OrderCode</p>
                    }
                </div>
                <a href="@Url.Action("Appointments", "User")" class="btn btn-primary">Back to Appointments</a>
            </div>
        </div>
    </div>
</div>

